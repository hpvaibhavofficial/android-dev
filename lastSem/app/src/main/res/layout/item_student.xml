<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:background="#EAF6FF">

        <!-- ✅ STUDENT NAME (Heading) -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="90dp"
            android:text="Student Name"
            android:textColor="#1F2D3D"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- ✅ Pencil Icon -->
        <ImageView
            android:id="@+id/btnEditIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:padding="9dp"
            android:background="@drawable/bg_circle_edit"
            android:src="@drawable/ic_edit_pen"
            android:contentDescription="Edit Student" />

        <!-- ✅ Delete / Bin Icon (RED) BELOW Pencil -->
        <ImageView
            android:id="@+id/btnDeleteIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/btnEditIcon"
            android:layout_marginTop="10dp"
            android:padding="9dp"
            android:background="@drawable/bg_circle_delete"
            android:src="@drawable/ic_delete_bin"
            android:contentDescription="Delete Student" />

        <!-- ✅ Divider line -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tvName"
            android:layout_marginTop="10dp"
            android:background="#D8E5EE" />

        <!-- ✅ Details Section -->
        <LinearLayout
            android:id="@+id/detailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:layout_marginEnd="70dp">

            <TextView
                android:id="@+id/tvId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: 101"
                android:textColor="#37474F"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Section: A"
                android:textColor="#37474F"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Phone: 9999999999"
                android:textColor="#37474F"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
