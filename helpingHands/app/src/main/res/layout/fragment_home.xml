<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F8F8"
    tools:context=".ui.customer.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ðŸŸ¦ Header: Logo + Search + Filter -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="?attr/colorPrimary"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_plumbing_hat"
                android:contentDescription="App Logo"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/search_background_white"
                android:hint="Search materials or services..."
                android:textColorHint="#99101010"
                android:paddingStart="12dp"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="8dp"
                android:textSize="14sp"
                android:textColor="#212121" />

            <ImageButton
                android:id="@+id/btnFilter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_filter"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Filter" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <!-- ðŸ–¼ï¸ Hero Banner -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerHero"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/rounded_corners" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayoutIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            app:tabIndicatorHeight="0dp"
            app:tabGravity="center" />

        <!-- âš¡ Quick Actions -->
        <LinearLayout
            android:id="@+id/quickActionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <!-- Book Plumber -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBookPlumber"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#00BCD4"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_plumbing_hat"
                        app:tint="#FFE400" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Plumber"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- View Services -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewServices"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#4CAF50"
                android:layout_marginHorizontal="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/wrench"
                        android:contentDescription="Pipe Icon"
                        android:scaleType="centerCrop" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Services"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Shop Products -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardShopProducts"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FF9800"
                android:layout_marginStart="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/pipe"
                        android:contentDescription="Pipe Icon"
                        android:scaleType="centerCrop" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shop Products"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- ðŸ§± Featured Materials -->
        <TextView
            android:id="@+id/tvFeaturedTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="16dp"
            android:text="Featured Materials"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFeaturedProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="8dp"
            android:clipToPadding="false"
            tools:listitem="@layout/item_featured_product" />

        <!-- âš™ï¸ Popular Services -->
        <TextView
            android:id="@+id/tvServicesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="16dp"
            android:text="Popular Services Near You"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPopularServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="16dp"
            tools:listitem="@layout/item_popular_service"
            />

        <!-- ðŸ†˜ Contact Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNeedHelpCTA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Need Help Now? Contact Emergency"
                android:textSize="16sp"
                app:icon="@drawable/ic_call"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@android:color/white"
                app:backgroundTint="?attr/colorPrimary"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:text="Call Us: (555) 123-4567 | Email: support@plumbinghub.com"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Â© 2025 Helping Hands Plumbing Marketplace"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
