<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- SERVICE IMAGE -->
        <ImageView
            android:id="@+id/od_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_service_placeholder"
            android:background="@drawable/shape_image_bg"
            android:layout_marginBottom="20dp" />

        <!-- CARD 1: SERVICE DETAILS -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/shape_card_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/od_service_name"
                android:text="Service Name"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/od_provider_name"
                android:text="Provider Name"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- CARD 2: ORDER INFO -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/shape_card_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:text="Order Details"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/od_amount"
                android:text="â‚¹0"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/od_payment_method"
                android:text="Payment: "
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/od_status"
                android:text="Status"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/od_booking_date"
                android:text="Booking Date"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- CARD 3: CUSTOMER DETAILS -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/shape_card_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:text="Customer Details"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/od_customer_name"
                android:text="Customer Name"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/od_customer_phone"
                android:text="Phone"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/od_customer_address"
                android:text="Address"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- BUTTONS -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/od_btn_rebook"
                android:text="Rebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/od_btn_cancel"
                android:text="Cancel Order"
                android:visibility="gone"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
