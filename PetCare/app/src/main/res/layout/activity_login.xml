<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_gradient">

    <!-- Center Container -->
    <LinearLayout
        android:id="@+id/centerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo -->
        <ImageView
            android:layout_width="140dp"
            android:layout_height="105dp"
            android:src="@drawable/pett"
            android:contentDescription="Logo"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"/>


        <!-- Login Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="14dp"
            app:cardBackgroundColor="#FFFBF5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_inner"
                android:padding="24dp">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login to your account"
                    android:textSize="22sp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="#3F2A1D"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"/>

                <!-- Email -->
                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:hint="Email address"
                    android:inputType="textEmailAddress"
                    android:padding="16dp"
                    android:background="@drawable/bg_edittext_brown"
                    android:textColor="#3F2A1D"
                    android:textColorHint="#9A6B4F"
                    android:layout_marginBottom="6dp"/>

                <!-- Password -->
                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="16dp"
                    android:background="@drawable/bg_edittext_brown"
                    android:textColor="#3F2A1D"
                    android:textColorHint="#9A6B4F"
                    android:layout_marginBottom="6dp"/>

                <!-- Remember & Forgot -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <CheckBox
                        android:id="@+id/cbRemember"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remember me"
                        android:textColor="#7C4A2D"/>

                    <!-- Spacer -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvForgot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forgot password?"
                        android:textColor="#7C4A2D"/>
                </LinearLayout>


                <!-- Login Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_button_brown"
                    android:backgroundTint="@null"/>

                <!-- Signup -->
                <TextView
                    android:id="@+id/tvSignup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donâ€™t have an account? Sign up"
                    android:textColor="#7C4A2D"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Continue with divider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="32dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#D9B8A6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue with"
                android:textColor="#7C4A2D"
                android:textSize="13sp"
                android:paddingHorizontal="12dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#D9B8A6"/>
        </LinearLayout>


        <!-- Social Icons Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18dp">

            <ImageView
                android:id="@+id/btnGoogle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_google"
                android:background="@drawable/bg_social_circle"
                android:padding="10dp"/>

            <ImageView
                android:id="@+id/btnFacebook"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_facebook"
                android:background="@drawable/bg_social_circle"
                android:padding="10dp"
                android:layout_marginStart="20dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
