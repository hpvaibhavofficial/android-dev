<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Thumbnail -->
        <ImageView
            android:id="@+id/order_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_service_placeholder"
            android:scaleType="centerCrop" />

        <!-- Title -->
        <TextView
            android:id="@+id/order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/order_img"
            android:layout_marginStart="12dp"
            android:text="Service Name"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/order_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/order_img"
            android:layout_below="@id/order_title"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="ID: #1234 • Provider: John" />

        <!-- Amount -->
        <TextView
            android:id="@+id/order_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="₹299"
            android:textStyle="bold" />

        <!-- Date -->
        <TextView
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_subtitle"
            android:layout_toEndOf="@id/order_img"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:text="12 Jan 2025, 10:30 AM" />

        <!-- Status chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/order_status_chip"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="28dp"
            android:text="Pending" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
