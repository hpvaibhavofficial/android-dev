<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDF3F0"
    tools:context=".crud.CrudExample">

    <!-- ✅ TOP CARD (Header + Form All in One) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ✅ HEADER AREA -->
            <RelativeLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="#2E8B7D"
                android:padding="14dp">

                <ImageView
                    android:id="@+id/imgLeft"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/akal"
                    android:contentDescription="Left Icon" />

                <ImageView
                    android:id="@+id/imgRight"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/andor"
                    android:contentDescription="Android Icon" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Records App"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Using Firebase Realtime Database"
                    android:textColor="#D9FFF8"
                    android:textSize="13sp"
                    android:layout_below="@id/tvTitle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"/>
            </RelativeLayout>

            <!-- ✅ FORM AREA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:orientation="vertical"
                android:background="#FFFFFF">

                <!-- Row 1: Student ID + Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etStudentId"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:hint="Student ID"
                        android:inputType="number"
                        android:padding="12dp"
                        android:background="@android:drawable/edit_text"
                        android:textColor="#000000"
                        android:textColorHint="#8A8A8A"/>

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="1dp"/>

                    <EditText
                        android:id="@+id/etStudentName"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:hint="Name"
                        android:inputType="textPersonName"
                        android:padding="12dp"
                        android:background="@android:drawable/edit_text"
                        android:textColor="#000000"
                        android:textColorHint="#8A8A8A"/>
                </LinearLayout>

                <Space
                    android:layout_width="1dp"
                    android:layout_height="12dp"/>

                <!-- Row 2: Section + Phone -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etSection"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:hint="Section"
                        android:inputType="text"
                        android:padding="12dp"
                        android:background="@android:drawable/edit_text"
                        android:textColor="#000000"
                        android:textColorHint="#8A8A8A"/>

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="1dp"/>

                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:hint="Phone Number"
                        android:inputType="phone"
                        android:padding="12dp"
                        android:background="@android:drawable/edit_text"
                        android:textColor="#000000"
                        android:textColorHint="#8A8A8A"/>
                </LinearLayout>

                <Space
                    android:layout_width="1dp"
                    android:layout_height="14dp"/>

                <!-- ✅ Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnAdd"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:text="Add"
                        android:textAllCaps="false"
                        android:backgroundTint="#4CAF50"
                        android:textColor="#FFFFFF"/>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="1dp"/>

                    <Button
                        android:id="@+id/btnUpdate"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:text="Update"
                        android:textAllCaps="false"
                        android:backgroundTint="#2196F3"
                        android:textColor="#FFFFFF"/>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="1dp"/>

                    <Button
                        android:id="@+id/btnDelete"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:text="Delete"
                        android:textAllCaps="false"
                        android:backgroundTint="#F44336"
                        android:textColor="#FFFFFF"/>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="1dp"/>

                    <Button
                        android:id="@+id/btnShow"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:text="Show"
                        android:textAllCaps="false"
                        android:backgroundTint="#607D8B"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ✅ Student List Title -->
    <TextView
        android:id="@+id/tvStudentList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="--------- Student List ---------"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#1F2D3D"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ✅ RecyclerView Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvStudentList"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvStudents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            tools:listitem="@layout/item_student"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
